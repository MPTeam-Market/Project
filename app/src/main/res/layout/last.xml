<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp">

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="521dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="새로운 비밀번호를 입력해주세요." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="523dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




        <LinearLayout

            android:layout_width="276dp"
            android:layout_height="47dp"
            android:layout_gravity="center|center_horizontal|top"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_input1"
            android:foregroundGravity="top|center"
            android:gravity="center|top"
            android:weightSum="10">

            <TextView

                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/opensans_bold"
                android:gravity="left|center_vertical"
                android:text="PASSWORD"
                android:textColor="#191919"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="154dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@null"
                android:includeFontPadding="false"
                android:inputType="textPassword"
                android:textColor="#707070"
                android:textSize="14sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_password"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="#00DCEDC8"
            android:gravity="bottom|center_horizontal"
            android:text="비밀번호 변경"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:backgroundTint="#52DCEDC8" />

    </LinearLayout>

</LinearLayout>