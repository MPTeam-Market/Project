<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="Change Image"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="17dp" />

    <ImageView
        android:id="@+id/iv_preview"
        android:layout_width="170dp"
        android:layout_height="127dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="17dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_choose"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:onClick="bt1"
            android:text="이미지 선택"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#776A77"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#DDDEA5"
            android:textColorLink="#DDDEA5"
            android:textSize="14sp"
            app:backgroundTint="#00DCEDC8"
            app:rippleColor="@color/ic_launcher_background"
            app:strokeColor="#00FFFFFF" />

        <Button
            android:id="@+id/bt_upload"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#DCEDC8"
            android:text="업로드"
            android:textColor="#776A77"
            android:textColorHighlight="@color/black"
            app:backgroundTint="#00DCEDC8" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="44dp" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/gray" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="Change my information"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <LinearLayout
        android:layout_width="521dp"
        android:layout_height="63dp"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="265dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_input1"
            android:weightSum="10">

            <TextView
                android:id="@+id/LoginNickname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:fontFamily="@font/opensans_bold"
                android:gravity="left|center_vertical"
                android:text="NICKNAME"
                android:textColor="#191919"
                android:textSize="10sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/editTextTextNickname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@null"
                android:includeFontPadding="false"
                android:inputType="textEmailAddress"
                android:textColor="#707070"
                android:textSize="14sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_nickname"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:background="#00DCEDC8"
            android:text="닉네임 변경"
            android:textColor="@color/black"
            app:backgroundTint="#52DCEDC8" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="523dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout

            android:layout_width="266dp"
            android:layout_height="47dp"
            android:layout_gravity="center|center_horizontal|top"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_input1"
            android:foregroundGravity="top|center"
            android:gravity="center|top"
            android:weightSum="10">

            <TextView

                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/opensans_bold"
                android:gravity="left|center_vertical"
                android:text="PASSWORD"
                android:textColor="#191919"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="154dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@null"
                android:includeFontPadding="false"
                android:inputType="textPassword"
                android:textColor="#707070"
                android:textSize="14sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_password"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="#00DCEDC8"
            android:gravity="bottom|center_horizontal"
            android:text="비밀번호 변경"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:backgroundTint="#52DCEDC8" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_weight="1" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="44dp" />

</LinearLayout>